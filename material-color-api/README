# Respuesta JSON

{
  "primary": {
    "100": "#c7ebc9",
    "200": "#9bda9e",
    "300": "#67c16b",
    "400": "#42a547",
    "500": "#2e7d32",
    "600": "#2a6b2d",
    "700": "#265529",
    "800": "#204724",
    "900": "#0d260f"
  }
}

# Consumir la API desde PHP
function getMaterialColorScale($baseHex) {
    $url = "http://localhost:3000/api/material?hex=" . ltrim($baseHex, "#");

    $json = file_get_contents($url);
    if ($json === false) return null;

    $data = json_decode($json, true);
    if (!isset($data['primary'])) return null;

    $result = [];
    foreach ($data['primary'] as $key => $hex) {
        $result["color-primary-$key"] = $hex;
    }

    return $result;
}


